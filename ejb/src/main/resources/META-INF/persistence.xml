<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="AcceptanceTest" transaction-type="JTA">
    <description>This unit manages acceptance tests.</description>
    <jta-data-source>jdbc/cxReaderDb</jta-data-source>
    <class>org.beefochu.dyndns.cxreader.ejb.Path</class>
    <properties>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="toplink.ddl-generation" value="create-tables"/>
      <property name="eclipselink.ddl-generation" value="create-tables"/>
      <!-- Create/Drop
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
			<property name="toplink.ddl-generation" value="drop-and-create-tables" />
			<property name="eclipselink.ddl-generation" value="drop-and-create-tables" /> -->
    </properties>
  </persistence-unit>
</persistence>
